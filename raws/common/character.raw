humanoid,karmic,aligned,has_aspects character {
    uses character perception equipment;

    attributes strength perception endurance charisma intelligence agility luck;

    skills hide defense intrinsic_fighting;
    random_skills false; /* Start all skills low. TODO - different intrinsics dependent on character template... */

    needs name;

    size medium;

    factions player;
}
