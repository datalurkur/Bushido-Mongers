/* Must be of type npc to spawn */
abstract karmic,aligned,has_aspects npc {
    has optional sym behavior;

    uses npc_behavior perception;

    attributes strength perception endurance charisma intelligence agility luck;

    skills intrinsic_fighting defense;

    class_many sym spawns_in;

    /* Maybe use eventually? */
    /* class_many sym never_spawn_in; */

    class sym spawn_rarity;
    spawn_rarity uncommon;

    class optional sym japanese_name;
}

abstract root profession {
    has_many sym uses_skill;
    has_many sym locations;
}

abstract root professional {
    has sym job;
}
