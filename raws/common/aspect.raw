abstract aspect {
    has float intrinsic;

    class float default_intrinsic;
    default_intrinsic 0.5;

    class optional sym associated_attribute;
    class optional float attribute_scaling;

    class float variance;
    variance 0.1;

    uses aspect;
}

abstract has_aspects {
    has_many optional sym attributes;
    has_many optional sym skills;

    uses has_aspects;

    /* random generation parameters */

    class bool random_attributes;
    random_attributes true;

    class bool random_skills;
    random_skills true;

    /* currently applies to both attributes and skills */
    class float random_variance;
    random_variance 0.05;

    class float attribute_offset;
    attribute_offset 0.0;

    class float skill_offset;
    skill_offset 0.0;
}

abstract aspect attribute {}
