abstract object {
    class sym typical_size;
    typical_size small;

    has_many optional sym adjectives;
    uses position;
}

/* An object that is nonseparable */
abstract object,effect_target atomic_object {
    class float typical_weight;

    class float density;
    density 0.5;

    class float hardness;
    hardness 0.5;

    has int typical_value;
    typical_value 0;

    uses Atomic;
}
