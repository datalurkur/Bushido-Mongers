abstract root object {
    has float weight;
    has sym size;
}

abstract root corporeal {
    has sym size;
    class sym body_type;
    class optional sym consumes;
    class optional proc on_consume;
    uses corporeal;
}

abstract root aligned {
    has_many sym factions;
}

abstract root karmic {
    has optional string name;

    has_many optional complex kills;
    has_many optional complex deeds;
    has_many optional string titles;

    has sym notoriety;
    notoriety unknown;

    uses karmic;
}

abstract root mover {
    uses position;
}
