abstract root object {
    has float weight;
    has sym size;
}

abstract root corporeal {
    has sym size;
    class sym body_type;
    class optional sym consumes;
    class optional proc on_consume;
    uses corporeal;
}

abstract root aligned {
    has_many sym factions;
}

abstract root named {
    has string name;
    needs name;
    at_creation {
        {:name => params[:name]}
    }
}

abstract root mover {
    uses position;
}
