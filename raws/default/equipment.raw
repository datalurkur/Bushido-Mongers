abstract adjustable_size,equipment armor {
    /* FIXME - Probably include an armor module to determine armor value based on material */
    /* FIXME - We need to deal with armor sizing requiring more components */
}

constructed,item dagger_blade {
    size tiny;

    recipes {
        technique forge;
        components metal;
    }
}

/* http://en.wikipedia.org/wiki/Japanese_swordsmithing */
constructed,melee_weapon dagger {
    type piercing;
    handedness one;

    recipes {
        technique craft;
        components dagger_blade leather;
    }
}

constructed,melee_weapon hammer {
    type blunt;
    handedness one;

    recipes {
        technique craft;
        components wood metal leather;
    }
}

constructed,ranged_weapon bow {
    type piercing;
    handedness two;

    recipes {
        technique bowmaking;
        components thread wood;
    }
}

constructed,ammunition arrow {
    recipes {
        technique fletching;
        components wood metal feather;
        duplicates 10;
    }
}
