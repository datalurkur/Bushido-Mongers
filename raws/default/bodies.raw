extension_of body basic_attributes {
    attributes strength perception endurance charisma intelligence agility luck;
}

/* Basically, this is the equivalent of a torso */
abstract body,basic_attributes,biped,can_wear humanoid {
    typical_size medium;

    part_name torso;

    incidental flesh;
    internal liver stomach;
    external head;
    symmetric {
        object_type arm;
        container_class external;
        symmetries median;
        count 2;
    }
    symmetric {
        object_type kidney;
        container_class internal;
        symmetries median;
        count 2;
    }
    morphic {
        object_type penis;
        morphism_classes male hermaphrodite;
        container_class external;
    }
    morphic {
        object_type testicle;
        morphism_classes male hermaphrodite;
        container_class external;
        symmetries median;
        count 2;
    }
    morphic {
        object_type breast;
        morphism_classes female hermaphrodite;
        container_class external;
        count 2;
        symmetries median;
    }
}

