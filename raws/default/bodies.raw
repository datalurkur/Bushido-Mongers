consumable,adjustable_size flesh {
    typical_size small;
    weight 1;
}

extension_of body biped {
    symmetric {
        object_type leg;
        container_class external;
        symmetry_type balanced_axial;
        count 2;
    }
}

extension_of body quadriped {
    symmetric {
        object_type leg;
        container_class external;
        symmetry_type balanced_axial;
        count 4;
    }
}

extension_of body octiped {
    symmetric {
        object_type leg;
        container_class external;
        symmetry_type balanced_axial;
        count 8;
    }
}

/* Basically, this is the equivalent of a torso */
body,biped,can_wear humanoid_body {
    weight 15;
    incidental flesh;
    typical_size medium;
    internal liver;
    external head;
    symmetric {
        object_type arm;
        container_class external;
        symmetry_type balanced_axial;
        count 2;
    }
    symmetric {
        object_type kidney;
        container_class internal;
        symmetry_type balanced_axial;
        count 2;
    }
}

