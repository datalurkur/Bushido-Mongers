extension_of body basic_attributes {
    attributes strength perception endurance charisma intelligence agility luck;
}

/* Basically, this is the equivalent of a torso */
abstract body,basic_attributes,biped,can_wear humanoid {
    weight 15;
    typical_size medium;

    part_name torso;

    incidental flesh;
    internal liver;
    external head;
    symmetric {
        object_type arm;
        container_class external;
        symmetry_type balanced_axial;
        count 2;
    }
    symmetric {
        object_type kidney;
        container_class internal;
        symmetry_type balanced_axial;
        count 2;
    }
}

