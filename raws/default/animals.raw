abstract npc animal {
    factions neutral;
}

/***********************************************************/
/* SEWER */

animal,corporeal rat {
    size tiny;
    body_type rodent_body;
    spawns_in sewer dock;
    spawn_rarity common;
}

animal,corporeal fox {
    japanese_name kitsune;
    size medium;
    body_type canine_body;
    spawns_in meadow forest mountain tundra;
    spawn_rarity common;
}

monster,corporeal spider {
    adjectives giant; /* It is big for a spider, all right? */
    size medium;
    body_type arachnoid_body;
    spawns_in sewer;
    spawn_rarity common;
}

monster,corporeal kraken {
    adjectives sewer;
    size gargantuan;
    body_type sewer_kraken_body;
    spawns_in sewer;
    spawn_rarity singular;
}

animal,corporeal snake {
    size small;
    body_type snake_body;
    spawns_in sewer meadow mountain forest jungle swamp desert;
    spawn_rarity common;
}

animal,corporeal gecko {
    /* TODO - actually make it poisonous */
    adjectives poisonous;
    size small;
    body_type lizard_body;
    spawns_in sewer forest jungle swamp dungeon;
    spawn_rarity unusual;
}

monster,corporeal swarm_of_flesh_eating_scarabs {
    size medium;
    body_type swarm_body;
    spawns_in sewer dungeon;
    spawn_rarity rare;
}

monster,corporeal tortoise {
    adjectives adolescent mutant ninja;
    size medium;
    body_type tortoise_body;
    spawns_in sewer;
    spawn_rarity rare;
}


