/* Must be of type npc to spawn */
abstract karmic,aligned,position npc {
    has optional sym behavior;

    uses npc_behavior;

    class_many sym spawns_in;

    /* Maybe use eventually? */
    /* class_many sym never_spawn_in; */

    class sym spawn_chance;
    spawn_chance coin_toss;
}

abstract npc monster {
    factions enemy;
}

monster,corporeal oni {
    size medium;
    body_type humanoid_body;
    spawns_in mountain;
    spawn_chance unusual;
}

monster,corporeal jikininki {
    size small;
    body_type humanoid_body;
    spawns_in mountain sewer meadow dock;

    behavior roam_and_consume;

    consumes body_part;
    on_consume {
        Log.info("#{params[:agent].monicker} is eating a body part!")
    }
}

monster,corporeal giant {
    size enormous;
    body_type humanoid_body;
    spawns_in mountain;
    spawn_chance unusual;
}

monster,corporeal dwarf {
    size small;
    body_type humanoid_body;
    spawns_in mountain;
    spawn_chance uncommon;
}

abstract npc guard {
    has_many sym provocations;
}

guard,corporeal peacekeeper {
    size medium;
    body_type humanoid_body;
    factions peaceful_unless_provoked;
    provocations lie attack steal kill;
}

npc,corporeal merchant {
    size medium;
    body_type humanoid_body;
    factions peaceful;
}
