abstract npc,basic_agent monster {
    factions enemy;
}

/* TODO - Make guard/merchant/thug archetypes, not based on a specific body type */
abstract npc,equipped_agent guard {
    has_many sym provocations;
}

humanoid,npc,equipped_agent merchant {
    size medium;
    factions peaceful;
}

humanoid,npc,equipped_agent thug {
    size medium;
    spawns_in sewer meadow mountain dungeon dock pier;
    spawn_rarity unusual;
    factions enemy;
}

humanoid,guard peacekeeper {
    size medium;
    factions peaceful;
    provocations lie attack steal kill;
}
