/* Must be of type npc to spawn */
abstract karmic,aligned,mover npc {
    has optional sym behavior;

    uses npc_behavior;

    class_many sym can_spawn_in;

    /* Maybe use eventually? */
    /* class_many sym never_spawn_in; */

    class sym spawn_chance;
    spawn_chance coin_toss;
}

abstract npc monster {
    factions enemy;
}

abstract npc animal {
    factions neutral;
}

animal,corporeal rat {
    size tiny;
    body_type rodent_body;
    can_spawn_in sewer dock;
    spawn_chance likely;
}

animal,corporeal mouse {
    size tiny;
    body_type rodent_body;
    can_spawn_in meadow;
    spawn_chance likely;
}

monster,corporeal giant_spider {
    size medium;
    body_type arachnoid_body;
    can_spawn_in sewer;
    spawn_chance likely;
}

monster,corporeal oni {
    size medium;
    body_type humanoid_body;
    can_spawn_in mountain;
    spawn_chance unusual;
}

monster,corporeal jikininki {
    size small;
    body_type humanoid_body;
    can_spawn_in mountain sewer meadow dock;

    behavior roam_and_consume;

    consumes body_part;
    on_consume {
        Log.info("#{params[:agent].monicker} is eating a body part!")
    }
}

abstract npc guard {
    has_many sym provocations;
}

guard,corporeal peacekeeper {
    size medium;
    body_type humanoid_body;
    factions peaceful_unless_provoked;
    provocations lie attack steal kill;
}

npc,corporeal merchant {
    size medium;
    body_type humanoid_body;
    factions peaceful;
}
