abstract root,mover npc {
    uses npc_behavior;

    has string name;
    needs name;

    has_many sym factions;
    has_many sym can_spawn_in;
    has_many sym never_spawn_in;

    can_spawn_in nothing;
    never_spawn_in nothing;

    at_creation {
        {:name => params[:name]}
    }
}

abstract npc monster {
    factions enemy;
}

monster,corporeal rat {
    size tiny;
    body_type rodent_body;
    can_spawn_in sewer dock;
}

monster,corporeal mouse {
    size tiny;
    body_type rodent_body;
    can_spawn_in meadow;
}

abstract npc guard {
    has_many sym provocations;
}

guard,corporeal peacekeeper {
    size medium;
    body_type humanoid_body;
    factions peaceful_unless_provoked;
    provocations lie attack steal kill;
}

npc,corporeal merchant {
    size medium;
    body_type humanoid_body;
    factions peaceful;
}
