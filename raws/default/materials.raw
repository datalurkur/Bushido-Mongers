/* RAW MATERIAL TYPES */
abstract raw_material metal {
    typical_size small;
    class int melting_point;
}
abstract raw_material wood {
    typical_size small;
}
abstract raw_material fiber {
    typical_size tiny;
    typical_weight 0.1;
}
abstract raw_material organic {}
abstract raw_material plant {}

/* GENERIC ORGANICS */
organic skin {
    typical_weight 1;
    typical_value 1;
}
