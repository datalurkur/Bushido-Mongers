/* === ZONE TYPES === */
abstract zone inside_zone {
    sideness inside;
    ground_name floor;
}

abstract zone monster_spawner {
    spawn_npcs monster;
}

/* === ZONE INSTANTIABLES === */
static zone haven {
    depth_range 1 2 3;
    keywords peaceful;
    child_zones tavern inn;
    spawn_npcs human;
}

static zone meadow {
    depth_range 0 1 2 3;
    keywords grassy;
    spawn_npcs monster;
}

static monster_spawner castle {
    depth_range 0 1 2 3 4;
    keywords constructed;
    sideness inside;
    child_zones barracks portcullis sewer tower dungeon;
}

static monster_spawner barracks {
    depth_range 0 1;
    keywords constructed;
    sideness inside;
    child_zones sewer tower dungeon;
}

static monster_spawner sewer {
    depth_range 0 1 2;
    keywords dank wet;
    sideness inside;
}

static monster_spawner dock {
    depth_range 1;
    keywords wooden;
    child_zones pier boat;
}

static monster_spawner boat {
    depth_range 0 1;
    keywords wet;
}

static zone pier {
    depth_range 0 1;
    keywords wooden;
    spawn_npcs human;
}

static zone jungle {}
static zone forest {}
static zone swamp {}
static zone mountain {}
static zone desert {}
static zone tundra {}

static zone orchard {
    spawn_npcs human;
}

static zone portcullis {
    spawn_npcs human;
}

static inside_zone tower {
    spawn_npcs human;
}

static inside_zone dungeon {
    spawn_npcs human spider;
}

static inside_zone tavern {
    spawn_npcs human;
}

static inside_zone inn {
    spawn_npcs human;
}

static inside_zone temple {
    spawn_npcs human;
}
