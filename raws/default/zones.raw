/* === ZONE TYPES === */
abstract zone inside_zone {
    sideness inside;
}

abstract zone monster_spawner {
    spawn_npcs monster;
}

/* === ZONE INSTANTIABLES === */
zone haven {
    depth_range 1 2 3;
    keywords peaceful;
    child_zones tavern inn;
    spawn_npcs peacekeeper merchant;
}

zone meadow {
    depth_range 0 1 2 3;
    keywords grassy;
    spawn_npcs monster;
}

monster_spawner castle {
    depth_range 0 1 2 3 4;
    keywords constructed;
    sideness inside;
    child_zones barracks portcullis sewer tower dungeon;
}

monster_spawner barracks {
    depth_range 0 1;
    keywords constructed;
    sideness inside;
    child_zones sewer tower dungeon;
}

monster_spawner sewer {
    depth_range 0 1 2;
    keywords dank wet;
    sideness inside;
}

monster_spawner dock {
    depth_range 1;
    keywords wooden;
    child_zones pier boat;
}

monster_spawner boat {
    depth_range 0 1;
    keywords wet;
}

zone pier {}
zone jungle {}
zone forest {}
zone orchard {}
zone swamp {}
zone mountain {}
zone desert {}
zone tundra {}
zone portcullis {}
inside_zone tower {}
inside_zone dungeon {}
inside_zone tavern {}
inside_zone inn {}
inside_zone temple {}

