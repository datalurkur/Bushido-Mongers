abstract skill no_skill {
    default_intrinsic 0.2;
}

abstract skill low_skill {
    default_intrinsic 0.2;
}

abstract skill medium_skill {
    default_intrinsic 0.4;
}

abstract skill high_skill {
    default_intrinsic 0.6;
}

/* -- skills start -- */

low_skill hide_skill {
    associated_attribute agility;
    attribute_scaling 0.2;

    has bool hidden;
    hidden false;
}

no_skill defense_skill {
    associated_attribute agility;
    attribute_scaling 0.2;
}
