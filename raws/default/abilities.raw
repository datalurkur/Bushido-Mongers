abstract root ability {
    has float skill;
    has float familiarity;

    has float default_skill;
    has float default_familiarity;

    has int familiarity_loss; /* Familiarity begins to degrade after this many ticks */

    at_creation {
        extend Ability
        {
            :skill       => @properties[:default_skill],
            :familiarity => @properties[:default_familiarity]
        }
    }
}

ability hide {
    default_skill 0.2;
    default_familiarity 0.0;
    familiarity_loss 100;
}
