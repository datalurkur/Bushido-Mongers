abstract root ability {
    has float skill;
    has float familiarity;

    class float default_skill;
    class float default_familiarity;

    has int familiarity_loss; /* Familiarity begins to degrade after this many ticks */

    at_creation {
        extend Ability
        {
            :skill       => @core.db.info_for(@type, :default_skill),
            :familiarity => @core.db.info_for(@type, :default_familiarity)
        }
    }
}

ability hide {
    default_skill 0.2;
    default_familiarity 0.0;
    familiarity_loss 100;
}
